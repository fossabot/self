{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "declaration": true,
    "declarationDir": "./dist/esm",
    "outDir": "./dist/esm",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "./",
    "composite": true,
    "types": [],
    "lib": ["ES2020"]
  },
  "include": [
    "src/**/*",
    "src/**/*.js",
    "index.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/node_modules/**",
    "tests",
    "scripts",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
